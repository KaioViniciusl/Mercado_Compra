<h1>Editar produto</h1>

<%= simple_form_for @product do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :quantity %>
    </div>

    <div class="form-actions">
        <%= f.submit %>
    </div>
    
<% end %>